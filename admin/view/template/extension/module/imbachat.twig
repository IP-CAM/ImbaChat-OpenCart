{{ header }}{{ column_left }}
<div id="content">
  <div class="page-header">
    <div class="container-fluid">
 
      <!-- Кнопки управления -->
      <div class="pull-right">
        <button type="submit" form="form-module" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
        <a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a>
      </div>
 
      <!-- Название модуля -->
      <h1>{{ heading_title }}</h1>
 
      <!-- Хлебные крошки -->
      <ul class="breadcrumb">
        {% for breadcrumb in breadcrumbs %}
        <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
        {% endfor %}
      </ul>
 
    </div>
  </div>
 
  <div class="container-fluid">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><i class="fa fa-pencil"></i> {{ text_edit }}</h3>
      </div>
      <div class="panel-body">
        <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-module" class="form-horizontal">
          <!-- Настройка: "Статус" -->
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-width">Developer ID</label>
              <div class="col-sm-10">
                <input type="text" name="module_imbachat_dev_id" value="{{ data_form.module_imbachat_dev_id }}" placeholder="Developer ID" id="input-width" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-width">Developer login</label>
              <div class="col-sm-10">
                <input type="text" name="module_imbachat_dev_login" value="{{ data_form.module_imbachat_dev_login }}" placeholder="Developer login" id="input-width" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-height">Developer password</label>
              <div class="col-sm-10">
                <input type="text" name="module_imbachat_dev_pass" value="{{ data_form.module_imbachat_dev_pass }}" placeholder="Developer password" id="input-height" class="form-control" />
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label" for="input-width">Secret key</label>
              <div class="col-sm-10">
                <input type="text" name="module_imbachat_secret_key" value="{{ data_form.module_imbachat_secret_key }}" placeholder="Secret key" id="input-width" class="form-control" />
              </div>
            </div>
            </div>
          </div>
 
        </form>
      </div>
    </div>
  </div>
</div>
{{ footer }}